#version 330 core

smooth in vec4 fragment_color;
smooth in vec4 vNormal;

struct Sunlight
{
    vec3 lightDirection;
    vec3 lightColor;
    float fAmbientIntensity;
};

uniform Sunlight sunlight;

// Ouput data
out vec4 color;


void main()
{

        float fDiffuse = max(0.0, dot(normalize(vNormal), -vec4(sunlight.lightDirection, 1.0))); 
	color = fragment_color * vec4(sunlight.lightColor, 1.0) * fDiffuse;
}
